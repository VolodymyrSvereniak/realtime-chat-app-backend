generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  fullName       String
  password       String
  profilePicture String?  @default("")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
